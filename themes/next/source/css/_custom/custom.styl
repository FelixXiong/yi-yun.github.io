// Custom styles.
body {
  text-shadow: 0.01em 0.01em 0.01em #999999 !important;
}

// 文章底部留白更改
.post-widgets {
    padding-top: 0px;
}
.post-nav {
    margin-top: 30px;
}

// 侧栏RSS按钮样式
.feed-link {
    margin-top: 15px;
    margin-left: 7px;
}
.feed-link a {
    border: 1px solid rgb(247,56,9) !important;
    border-radius: 16px;
}

//侧边社交链接
.links-of-author {
     text-align:center
}
.links-of-author a {
  border-bottom: none;
  border-radius: 4px;
  padding: 0px 8px;
  color: #191919;
}

.links-of-author a:before, .links-of-author .exturl:before{
  background: #292929;
}



//文章超链接
.post-body p a{
  color: blue
  border-bottom: none;
  &:hover{
    color: purple
  }
}

